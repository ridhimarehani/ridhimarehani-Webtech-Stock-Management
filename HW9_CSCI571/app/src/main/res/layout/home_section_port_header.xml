            android:textColor="#707070"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/portfolio_net_worth_val"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
